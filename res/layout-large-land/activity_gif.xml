<!-- HORIZONTAL LAYOUT FOR HORIZONTAL 7" DEVICES -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:id="@+id/wv_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal" >

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1" />

		<WebView
			android:id="@+id/wv"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
			android:layout_weight="2" />
	</LinearLayout>

	<ProgressBar
		android:id="@+id/pb"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_margin="20dp"
		android:visibility="gone" />

	<!-- Just to make the title 1/2 the screen -->

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal" >

		<LinearLayout
			android:id="@+id/header_nom_container"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
			android:layout_marginTop="140dp"
			android:layout_weight="1"
			android:background="#66ffffff"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin" >

			<TextView
				android:id="@+id/header_nom"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:shadowColor="#dddddd"
				android:shadowDx="0"
				android:shadowDy="2"
				android:shadowRadius="2"
				android:textSize="@dimen/header_title_fontsize" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1" />
	</LinearLayout>

	<RelativeLayout
		android:id="@+id/actions_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:background="#153C5A" >

		<LinearLayout
			android:id="@+id/actions_left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" >

			<TextView
				android:id="@+id/gif_precedent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="10dp"
				android:paddingLeft="30dp"
				android:paddingRight="10dp"
				android:paddingTop="10dp"
				android:shadowColor="#000000"
				android:shadowDx="0"
				android:shadowDy="2"
				android:shadowRadius="2"
				android:text="&lt; PREC."
				android:textColor="#ffffff"
				android:textSize="20sp" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/actions_right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true" >

			<TextView
				android:id="@+id/gif_suivant"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="10dp"
				android:paddingLeft="10dp"
				android:paddingRight="30dp"
				android:paddingTop="10dp"
				android:shadowColor="#000000"
				android:shadowDx="0"
				android:shadowDy="2"
				android:shadowRadius="2"
				android:text="SUIV. >"
				android:textColor="#ffffff"
				android:textSize="20sp" />
		</LinearLayout>
	</RelativeLayout>

	<LinearLayout
		android:id="@+id/kitkat_actionbar_notifs"
		android:layout_width="match_parent"
		android:layout_height="10dp"
		android:layout_alignParentTop="true"
		android:orientation="vertical"
		android:visibility="gone" />

</RelativeLayout>